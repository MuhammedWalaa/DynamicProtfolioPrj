@model DynamicProtfolioPrj.Models.Page.PageDetailsVM

@{
    ViewData["Title"] = "View";
}

<div>
    <div class="row">
        <div class="col-lg-12">
            <div class="features-text section-header text-center">
                <h1 style="font-size:50px" class="section-title">@Model.Name</h1>
                <hr />
            </div>
        </div>
    </div>
    @foreach (var Section in Model.Sections)
    {

        <div class="row">
            <div class="col-lg-12">
                <div class="features-text section-header text-center">
                    <h2 class="section-title">@Section.Name</h2>
                </div>
            </div>
        </div>
        <div class="row" style="margin:2%">
            @foreach (var sectionContent in Section.SectionContents)
            {
                @foreach (var content in sectionContent.Contents)
                {
                    <div class="col-@content.Size">
                        @switch (content.Type)
                        {
                            case 1:
                                <div class="business-item-info">
                                    @Html.Raw(@content.ContentData[0].Data);
                                </div>
                                break;
                            case 2:
                                <div class="business-item-img">
                                    <img style="width:100%;height:100%; max-height:600px;max-width:500;" src="~/uploads/@content.ContentData[0].Data" class="img-fluid" alt="">
                                </div>
                                break;
                            case 3:
                                <div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
                                    <ol class="carousel-indicators">
                                        @for (int i = 0; i < content.ContentData.Count; i++)
                                        {
                                            if (i == 0)
                                            {
                                                <li data-target="#carouselExampleIndicators" data-slide-to="@i" class="active"></li>
                                            }
                                            else
                                            {
                                                <li data-target="#carouselExampleIndicators" data-slide-to="@i"></li>
                                            }
                                        }
                                    </ol>
                                    <div class="carousel-inner">

                                        @for (int i = 0; i < content.ContentData.Count; i++)
                                        {
                                            if (i == 0)
                                            {
                                                <div class="carousel-item active">
                                                    <img style="width:100%;height:100%; max-height:600px;max-width:500;" class="d-block w-100" src="~/uploads/@content.ContentData[i].Data">
                                                </div>}
                                            else
                                            {
                                                <div class="carousel-item">
                                                    <img style="width:100%;height:100%; max-height:600px;max-width:500;" class="d-block w-100" src="~/uploads/@content.ContentData[i].Data">
                                                </div>
                                            }
                                        }
                                    </div>
                                    <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
                                        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                                        <span class="sr-only">Previous</span>
                                    </a>
                                    <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
                                        <span class="carousel-control-next-icon" aria-hidden="true"></span>
                                        <span class="sr-only">Next</span>
                                    </a>
                                </div>
                                break;
                            case 4:
                                if (content.ContentData[0].Data.Contains("youtube.com/watch"))
                                {
                                    <iframe width="560" height="315" style="width:100%;height:500px;" src="@content.ContentData[0].Data.Replace("/watch?v=","/embed/")" title="YouTube video player" frameborder="0" allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture" allowfullscreen></iframe>

                                }
                                else if (content.ContentData[0].Data.Contains("vimeo.com"))
                                {
                                    <iframe width="560" height="315" src="@content.ContentData[0].Data.Replace("vimeo.com","player.vimeo.com/video")" style="width:100%;height:500px;" frameborder="0" webkitallowfullscreen mozallowfullscreen allowfullscreen></iframe>

                                }
                                else
                                {
                                    <h5 style="color:red; text-align:center">Wrong Vido Url</h5>
                                }
                                break;

                            default:
                                break;
                        }
                    </div>
                }
            }
        </div>
    }
</div>
